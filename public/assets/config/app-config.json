    "maxLoginAttempts": 5,
    "maxFilters": 10,
    "maxPageSize": 100,
    "defaultPageSize": 20,
    "regexMaxLength": 255
  },
  "storage": {
    "type": "grid-fs",
    "maxFileSize": 20971520,
    "allowedContentTypes": ["image/png", "image/jpeg", "application/pdf"]
  }
}
