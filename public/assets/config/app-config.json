{
  "branding": {
    "appName": "White Label CMS",
    "logoUrl": "assets/logo.svg",
    "themeId": "coder",
    "language": "en",
    "layoutMode": "sidebar",
    "defaults": {
      "desktop": "sidebar",
      "tablet": "navbar",
      "mobile": "floating"
    }
  },
  "email": {
    "defaultFrom": "admin@whitelabel.com",
    "passwordTemplateId": null,
